{
  "name": "lerna-monorepo-practice",
  "repository": "https://github.com/JackHowa/lerna-monorepo-components",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "release": "lerna publish",
    "release:force": "lerna publish --force-publish -y",
    "release:stable": "lerna publish --force-publish --dist-tag stable -y",
    "lerna-version:canary": "lerna version prerelease --preid=canary -y",
    "release:canary": "lerna publish --dist-tag canary --canary --preid canary -y",
    "lerna-version": "lerna version"
  }
}
